<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Webbrowser NMCT.BE"
        android:id="@+id/btnBrowse"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make call"
        android:id="@+id/btnMakeCall"
        android:layout_below="@+id/btnBrowse"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial number"
        android:id="@+id/btnDialNumber"
        android:layout_below="@+id/btnMakeCall"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geolocation"
        android:id="@+id/btnGeolocation"
        android:layout_below="@+id/btnDialNumber"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnDialNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/btnContacts"
        android:layout_below="@+id/btnGeolocation"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnGeolocation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit first contact"
        android:id="@+id/btnEdit"
        android:layout_below="@+id/btnContacts"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnContacts"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:id="@+id/btnCalculate"
        android:layout_below="@+id/btnEdit"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnEdit"/>
</RelativeLayout>
